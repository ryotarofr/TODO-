{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"fs:default",
		"fs:allow-read-text-file",
		"fs:allow-write-text-file",
		"fs:allow-mkdir",
		"fs:allow-exists",
		"fs:read-all",
		"fs:write-all",
		"fs:scope-appdata-recursive",
		"dialog:default",
		"dialog:allow-open",
		"core:window:allow-set-effects"
	]
}
